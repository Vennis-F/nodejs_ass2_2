<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>
        <%= title %>
    </title>

    <style>
        body {
            background-color: #f2f2f2;
        }

        .button-edit:hover {
            background-color: #00b3aa !important;
        }
      .button-delete:hover {
        background-color: #009e96 !important;
        color: white !important;
      }
        .button_add {
            padding: 10px 20px;
            font-size: 10px;
            text-align: center;
            cursor: pointer;
            outline: none;
            color: #fff;
            background-color: #04AA6D;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
        }

        .button_add:hover {
            background-color: #3e8e41
        }

        .button_add:active {
            background-color: #3e8e41;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

        .menu_style {
            background-color: #00b5ad;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <!-- NAVIGATION -->
    <nav class="navbar menu_style" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <div class="navbar-item" style="text-decoration: none; margin-left: 20px" href="/">
                <span style="
              font-weight: 900;
              font-family: Verdana, Geneva, Tahoma, sans-serif;
            ">KULI FOOTBALL</span>
            </div>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item link-hover" style="text-decoration: none; color: white; font-weight: 500"
                    href="/ ">HOMES</a>
                <a class="navbar-item link-hover" style="text-decoration: none; color: white; font-weight: 500"
                    href="/nations ">NATIONS</a>
            </div>
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary" style="text-decoration: none">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light" style="text-decoration: none">
                            Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- TITLE -->
    <div class="container" style="margin-bottom: 20px">
        <div class="row">
            <div class="col">
                <h2 style="color: #009e96; font-weight: 500; font-size: 36px;">EDIT PLAYER</h2>
            </div>
        </div>
    </div>

    <form method="post" class="container">
        <div class="field">
            <label class="label">Name</label>
            <div class="control" style="width:50%">
                <input class="input" name="name" type="text" required value="<%=player.name%>">
            </div>
        </div>
        <div class="field">
            <label class="label">Image</label>
            <div class="control" style="width:50%">
                <input class="input" name="image" type="text" required value=" <%=player.image.trim() %>">
            </div>
        </div>

        <div class="field">
            <label class="label">Club</label>
            <div class="control" style="width:20%">
                <div class="select">
                    <select name="club">
                        <% clubs.forEach(club=> { %>
                            <option value="<%= club.name %>" <%=JSON.stringify(club.name)===JSON.stringify(player.club)
                                ? 'selected' : '' %>><%= club.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label class="label">Position</label>
            <div class="control">
                <div class="select">
                    <select name="position">
                        <% positions.forEach(position=> { %>
                            <option value="<%= position.name %>"
                                <%=JSON.stringify(position.name)===JSON.stringify(player.position) ? 'selected' : '' %>>
                                <%=position.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
        </div>

        <div class="field" style="width:30%">
            <label class="label">Goals</label>
            <div class="control">
                <input class="input" min="0" name="goals" required type="number" value="<%= player.goals%>">
            </div>
        </div>

        <div class="field">

            <label class="label">IsCaptain</label>

            <div class="control">
                <% if ( player.isCaptain===true) { %>
                    <label class="radio">
                        <input type="radio" name="isCaptain" id="true" value="true" checked> True
                    </label>
                    <label class="radio">
                        <input type="radio" name="isCaptain" id="false" value="false"> False
                    </label>
                    <% } else { %>
                        <label class="radio">
                            <input type="radio" name="isCaptain" id="true" value="true" checked=""> True
                        </label>
                        <label class="radio">
                            <input type="radio" name="isCaptain" id="false" value="false" checked> False
                        </label>
                        <% } %>

            </div>
        </div>

        <div class=" field is-grouped ">
            <div class="control ">
                <button class="button is-warning is-light button-edit" style="
                        background-color: #009e96;
                        color: white;
                        transition: all ease 0.4s;
                      ">
                    UPDATE
                </button>
            </div>
            <div class="control ">
                <a href="/" style="text-decoration: none">
                    <button type="button" class="button is-danger is-light button-delete" style="
                    background-color: white;
                    color: #009e96;
                    border: 1px solid #009e96;
                    transition: all ease 0.4s;
                  ">
                        Cancel
                    </button>
                </a>
            </div>
        </div>
    </form>
    <!-- FOOTER -->
    <footer class="footer" style="margin-top: 30px; background-color: #00b5ad; padding: 20px 10px">
        <div style="margin-left: 10%; margin-top: 10px">
            <span>Â© 2022 All Rights Reserved</span>
        </div>
        <div style="margin-left: 10%; margin-top: 10px">
            <span>Contact via email: anhnhse150062@fpt.edu.vn</span>
        </div>
    </footer>
</body>

</html>